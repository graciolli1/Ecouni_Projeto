    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

<style>
    .button {
        position: relative;
        border-radius: 10px; /* Reduzindo o raio para tornar os cantos mais arredondados */
        background-color: #21689E; /* Cor de fundo */
        border: none; /* Remova a borda */
        color: white; /* Cor do texto */
        padding: 10px 20px; /* Diminuindo o espaçamento interno */
        text-align: center; /* Alinhar texto ao centro */
        text-decoration: none; /* Remover decoração de texto */
        display: inline-block; /* Exibir como bloco */
        font-size: 14px; /* Reduzindo o tamanho da fonte */
        margin: 4px 2px; /* Margem externa */
        cursor: pointer; /* Cursor do mouse */
        bottom: 200px; /* Distância em relação ao fundo da janela */
        top: 10px;
    }
    .containers {
        display: flex;
        justify-content: flex-end; /* Alinha os itens para a extremidade direita do contêiner */
    }

    .texto {
        position: relative;
        flex: 1;
        max-width: 50%; /* Limita a largura do texto */
        padding-right: 200px; /* Adiciona espaço entre o texto e a imagem */
        top: 170px;
        left:50px;
    }
    .texto h1 {
            color: #21689E;
        }

    img {
        max-width: 60%; /* Limita a largura da imagem */
        max-height: 60%; /* Limita a altura da imagem */
    }
    .logocima {

        height: 60%;
        width: 60%;
    }

</style>

</html>
