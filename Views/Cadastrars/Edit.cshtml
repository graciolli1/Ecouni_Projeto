@model Ecouni_Projeto.Models.Cadastrar

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Usuários</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cadastrarid" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="btn-voltar">
    <a asp-action="Index">Voltar para lista</a>
</div>

<style>

    /* Estilo geral da página */
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
    }

    /* Centralização do contêiner principal */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Centralização do conteúdo da linha */
    .row {
        display: flex;
        justify-content: center;
        width: 100%;
    }

    h1 {
        color: #2A629A;
        margin-bottom: 20px;
        text-align: center;
    }

    /* Linha horizontal */
    hr {
        border: 0;
        height: 1px;
        background-color: #2A629A;
        margin-bottom: 30px;
    }

    /* Estilo da coluna */
    .col-md-4 {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 120%;
        margin-left: 25px;
        border-radius: 20px;
    }

    /* Estilo do formulário */
    form {
        display: flex;
        flex-direction: column;
    }

    /* Estilo dos grupos de formulário */
    .form-group {
        margin-bottom: 20px;
    }

        /* Estilo dos rótulos */
        .form-group label {
            font-weight: bold;
            color: #343a40;
        }

    /* Estilo dos campos de entrada */
    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 10px;
        font-size: 14px;
    }

    /* Estilo das mensagens de validação */
    .text-danger {
        font-size: 12px;
        color: #dc3545;
    }

    /* Estilo do botão de submit */
    .btn-primary {
        background-color: #21689E;
        border: none;
        padding: 10px 20px;
        border-radius: 20px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Estilo do link de voltar */
    .btn-voltar > a {
        color: #007bff;
        text-decoration: none;
        transition: color 0.3s ease;
        text-align: center;
        display: block;
        margin-top: 20px;
        text-decoration: none;
    }

    .btn-voltar:hover {
        color: #0056b3;
    }

</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
