@model IEnumerable<Ecouni_Projeto.Models.Cadastrar>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Usuários</title>

    <style>
        /* Estilo geral da página */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
        }

        /* Centralização do contêiner principal */
        .container {
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 100%;
            overflow-x: auto;
        }

        /* Estilo do título */
        h1 {
            color: #2A629A;
            margin-bottom: 20px;
            text-align: center;
            font-size: 2em;
        }

        /* Estilo da tabela */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        /* Cabeçalho da tabela */
        th {
            background-color: #2A629A;
            color: #ffffff;
            padding: 10px;
            text-align: left;
        }

        /* Corpo da tabela */
        td {
            padding: 10px;
            border-bottom: 1px solid #ced4da;
        }

        /* Estilo dos botões */
        .btn {
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none;
            color: #ffffff;
            transition: background-color 0.3s ease;
            display: inline-block;
            margin-right: 5px;
            cursor: pointer;
        }

        /* Botões de ação */
        .btn-edit {
            background-color: #ffc107;
        }

        .btn-details {
            background-color: #17a2b8;
        }

        .btn-delete {
            background-color: #dc3545;
        }

        /* Estilo para ocultar a borda e o fundo do campo de senha */
        .password-display {
            border: none;
            background-color: transparent;
            color: #343a40;
            font-family: inherit;
            font-size: inherit;
            padding: 0;
        }

        /* Estilo responsivo para a tabela */
        table {
            font-size: 12px;
        }

        .container > p {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Estilo do botão "Cadastrar novo usuário" */
        .btn-create {
            background-color: #2A629A;
            color: #ffffff;
            padding: 10px 20px;
            border-radius: 10px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .btn-create:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Usuários</h1>
        <p>
            <a asp-action="Create" class="btn-create">Cadastrar novo usuário</a>
        </p>

        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Telefone</th>
                    <th>Senha</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                        <td><input type="password" value="@item.Senha" class="password-display" readonly /></td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Cadastrarid" class="btn btn-edit">✏️</a>
                            <a asp-action="Details" asp-route-id="@item.Cadastrarid" class="btn btn-details">🔍</a>
                            <a asp-action="Delete" asp-route-id="@item.Cadastrarid" class="btn btn-delete">🗑️</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
